@model Themes.PersonalBlog.Areas.PersonalBlog.Models.Blogs.BlogPostModel
@{ 
    var blogUrl = "/blogs/" + Model.Blog.UrlPath;
}
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">@Model.Blog.Title</h1>
        <p class="lead font-weight-normal">@Model.Blog.Description</p>
    </div>
</div>
<div class="container">

    <div class="row">
        <div class="col-md-8 blog-main">
            <h3 class="pb-3 mb-4 font-italic border-bottom">
                News
            </h3>

            <div class="blog-post">
                <h2 class="blog-post-title">@Model.Post.Title</h2>
                <p class="blog-post-meta">@Model.Post.CreatedDate.ToString("MMM dd, yyyy") by <a href="#">@Model.Post.Author</a></p>
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Post.Content))
                <p></p>
                <a class="btn btn-outline-secondary" href="@blogUrl">Back</a>
            </div><!-- /.blog-post -->
        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
            <div class="p-3">
                <h4 class="font-italic">Tags</h4>
                <ol class="list-unstyled">
                    @foreach(var tag in Model.Tags)
                    {
                        var tagUrl = "/blog-tagged?tags=" + tag.Tag;
                        <li><a href="#">@tag.Tag</a></li>
                    }
                </ol>
            </div>
        </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->
</div>